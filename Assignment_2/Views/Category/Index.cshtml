
@{
    ViewData["Title"] = "Categories";
	var categories = ViewData["Categories"] as List<Category>;
}

<h1>@ViewData["Title"]</h1>
<table class="table table-dark">
	<tr>
		<th scope="col">#</th>
		<th scope="col">Name</th>
		<th scope="col">Description</th>
		<th scope="col">Edit</th>
		<th scope="col">Delete</th>
		<th scope="col">Details</th>
	</tr>
		@foreach (var category in categories)
		{
		<tr>
			<td scope="row">@category.Id</td>
			<td scope="row">@category.Name</td>
			<td scope="row">@category.Description</td>
			<td scope="row"><a asp-controller="Category" asp-action="EditForm" asp-route-id="@category.Id" class="btn btn-warning fs-6">Edit</a></td>
			<td scope="row"><a asp-controller="Category" asp-action="DeleteCategory" asp-route-id="@category.Id" class="btn btn-danger fs-6">Delete</a></td>
			<td scope="row"><a asp-controller="Category" asp-action="Details" asp-route-id="@category.Id" class="btn btn-success fs-6">Show Details</a></td>
		</tr>
		}
		<tr>
		<td colspan="6" class="text-center"><a asp-controller="Category" asp-action="CreateForm" class="btn btn-primary w-50 fs-3">Create</a></td>
		</tr>
</table>
